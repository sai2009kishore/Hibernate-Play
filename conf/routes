# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Persons
GET     /                           controllers.PersonController.index()
GET     /persons                    controllers.PersonController.getPersons()
GET     /persons/:id                controllers.PersonController.getPersonById(id : Int)
POST    /persons                    controllers.PersonController.addPerson()
DELETE  /persons/:id				controllers.PersonController.deletePerson(id: Int)

# Cities
GET		/cities						controllers.CityController.getCities()
GET     /cities/:id                 controllers.CityController.getCityById(id : Int)
POST    /cities               		controllers.CityController.addCity()
DELETE  /cities/:id					controllers.CityController.deleteCity(id: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
